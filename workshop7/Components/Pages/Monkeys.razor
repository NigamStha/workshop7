@page "/Monkeys"
<h2>Monkey List</h2>

@if (monkeys.Count == 0)
{
    <p>No monkeys found</p>
}
else
{
    <div style="display:flex;flex-wrap:wrap;gap:20px;">
        @foreach (var m in monkeys)
        {
            <div style="width:260px;padding:12px;border-radius:12px;
                                box-shadow:0 0 8px rgba(0,0,0,0.15);background:white;">

                <img src="@m.Image" alt="@m.Name" style="width:100%;border-radius:10px;height:160px;object-fit:cover;" />

                <h3 style="margin-top:10px;">@m.Name</h3>
                <p><strong>Location:</strong> @m.Location</p>
                <p><strong>Population:</strong> @m.Population</p>

                <p style="font-size:14px;color:#444;">@m.Details</p>

                <p style="font-size:13px;color:#666;">
                    <strong>Coordinates:</strong><br />
                    Lat: @m.Latitude<br />
                    Long: @m.Longitude
                </p>

            </div>
        }
    </div>
}

